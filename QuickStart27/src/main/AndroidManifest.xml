<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="quick.kural.quickstart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.PermissonRequesterActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activitys.SearchActivity"
            android:screenOrientation="fullSensor"
         android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activitys.MainActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activitys.RegistrationActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activitys.ViewPageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activitys.TabbedActivity.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>